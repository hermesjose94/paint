alinear(a,b,c)
  display flex
  flex-direction a
  justify-content b
  align-items c

#hestadisticas
  alinear(column,flex-start,center)
header
  width 100%
  height 70px
  margin 0
  color #f5f5dc
  margin 0
  padding 0
  alinear(column,center,center)

body
  border 0
  margin 0
  width 420px
  height 598px
  alinear(column,flex-start,center)
  font-family Palatino Linotype
  overflow hidden
  background-image url("../img/i.jpg")
  background-size 420px 500px

table
  font-family Sans-Serif
  font-size 12px
  margin 10px
  width 300px
  text-align left
  border-collapse collapse
  tr
    font-size 12px
    &:hover td
      background #ECECB9
      color #6D6B6B
    th
      font-size 13px
      font-weight normal
      padding 8px
      background #F1F1A5
      border-top 4px solid #F1F1A5
      border-bottom 1px solid #fff
      color #000
    td
      padding 8px
      background #F5F5DC
      border-bottom 1px solid #fff
      color #4D4D82
      border-top  1px solid transparent
.button
  width 40%
  height 50px
  border-radius 30px
  color aliceblue
  font-size 1.2em
  margin-top 20px
  color #fff
  background-color #5cb85c
  &:hover
    background #9B9F9B
